<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @how_to.user_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @how_to.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @how_to.content %>
</p>

<p>
  <strong>Video:</strong>
  <%= video_tag @how_to.video_url ,:controls => true ,:loop => true ,:autoplay => true if @how_to.video?%>
