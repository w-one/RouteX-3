<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @notes.each do |note| %>
      <i class="far fa-save"></i><%= note.archives.count %>
      <tr>
        <td><%= note.title %></td>
        
        <td><%= link_to 'Show', note %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
