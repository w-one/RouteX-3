<div class="userpage">
  <div class="search">
    <h1>User search</h1>
      <%= form_tag({controller:"users",action:"search"}, method: :get) do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'search'  %>
      <% end %>
  </div>
  <div class="usertop-container">
    <div class="userpage-continer">
      <div class="userpage-left">
        <div class="profileimage">
          <% if @user.profile_image.present? %>
            <%= image_tag @user.profile_image_url, size: "90x90" %>
          <% else %>
            <%= image_tag 'usericon.jpg' , size: "90x90" %>
          <% end %>
        </div>
        <div class="information">
          <h1><%= @user.nickname %></h1>
          <p><%= @user.username %></p>
          <p><%= @user.profile %></p>
        </div>
      </div>
      <div class="userpage-right">
        <div class="edit-follow">
          <% if user_signed_in? %>
            <div class="edit">
              <% if current_user.id == @user.id %>
                <%= link_to "編集", edit_user_registration_path %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="userpage-bottom">
    <div class = "sns-link">
      <ul class="profile-links">
      
        <% if @user.twitter.present? %>
          <li class="profile-link">
            <%= link_to @user.twitter, target: :_blank do %>
              <i class="fab fa-twitter-square"></i>
            <% end %>
          </li>
        <% end %>
      
        <% if @user.facebook.present? %>
          <li class="profile-link">
            <%= link_to @user.facebook, target: :_blank do %>
              <i class="fab fa-facebook-square"></i>
            <% end %>
          </li>
        <% end %>
      
        <% if @user.instagram.present? %>
          <li class="profile-link">
            <%= link_to @user.instagram, target: :_blank do %>
              <i class="fab fa-instagram"></i>
            <% end %>
          </li>
        <% end %>
        </ul>
    </div>

    <div class="follow">
        <%= render 'follow_form' %>
        <%= render 'stats' %>
    </div>
  </div>


      <div class="select-list">
        <ul>
          <li class="n-video"><%= link_to 'Video', userhowto_user_path %></li>   
          <li class="n-spot"><%= link_to 'Spot', :controller => "users", :action => "show" %></li>
          <li class="n-note"><%= link_to 'note', usernote_user_path %></li>      
        </ul>
      </div>
  
  <% @user.notes.each do |t| %>
    <div class="user-note-container">
      <div class="user-note-title">
        <a href="/notes/<%= t.id %>"><%= t.title %></a>
      </div>
      <div class="user-note-archive">
        <i class="far fa-save"></i><%= t.archives.count %>
      </div>
    </div>
  <% end %>

  
</div>